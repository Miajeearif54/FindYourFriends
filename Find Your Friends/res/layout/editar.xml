<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_map"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:gravity="center">
        
        <ImageButton
            android:id="@+id/grupos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_grupos"
            tools:ignore="ContentDescription" />
        
        <ImageButton
            android:id="@+id/meusGrupos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_meus_grupos"
            tools:ignore="ContentDescription" />
        
        <ImageButton
            android:id="@+id/editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/editar_rosa2"
            tools:ignore="ContentDescription"/>
        
        
    </LinearLayout>
    
    <Button 
        android:id="@+id/criarGrupo"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:text="@string/criarGrupo"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >
        </ListView>

     </LinearLayout>
     
</LinearLayout>